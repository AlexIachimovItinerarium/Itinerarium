<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextInputLabelTheme" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/colorPrimaryDark</item>
    <item name="android:textSize">20sp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="colorControlNormal">@color/colorPrimary</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
  </style>

  <style name="RegistrationCardView">
    <item name="android:background">@color/color_white</item>
    <item name="android:layout_marginLeft">@dimen/margin_16dp</item>
    <item name="android:layout_marginRight">@dimen/margin_16dp</item>
    <item name="cardCornerRadius">@dimen/corner_radius</item>
    <item name="cardElevation">4dp</item>
  </style>


  <style name="LandingTextView">
    <item name="android:textSize">@dimen/text_sub_heading</item>
    <item name="android:lineSpacingMultiplier">1.5</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/color_white</item>
  </style>

  <style name="LandingTextView.Link">
    <item name="android:textColor">@color/colorPrimaryDark</item>
  </style>ndingTextView.Normal

  <style name="LandingTextView.Normal">
    <item name="android:textColor">@color/color_white</item>
  </style>

  <style name="HeaderTextView">
    <item name="android:textSize">@dimen/text_size_18sp</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="RegistrationCardViewButton">
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textSize">@dimen/text_size_18sp</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:padding">0dp</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:background">@drawable/button_gray_bottom_rounded</item>
  </style>

  <style name="TextInputLabelThemeWhite" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/color_white</item>
    <item name="android:textSize">20sp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/color_black</item>
    <item name="colorControlNormal">@color/color_black</item>
    <item name="colorControlActivated">@color/color_black</item>
  </style>

</resources>
