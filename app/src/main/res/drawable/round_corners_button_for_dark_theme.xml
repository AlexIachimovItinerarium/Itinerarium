<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#000000" />
      <gradient android:angle="-90" android:startColor="#f7d0d0" android:endColor="#ffffff"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#ffffff" />
      <solid android:color="#f7d0d0"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#f7d0d0" />
      <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#f7d0d0" />
    </shape>
  </item>
</selector>