<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#FFFFFF" />
      <gradient android:angle="-90" android:startColor="#a41335" android:endColor="#ff0258"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#ff0258" />
      <solid android:color="#a41335"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="20dip" />
      <stroke android:width="1dip" android:color="#a41335" />
      <gradient android:angle="-90" android:startColor="#ff0258" android:endColor="#a41335" />
    </shape>
  </item>
</selector>